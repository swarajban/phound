extends layout

block content
	div.container
		div.row.signupHeader
			div.small-12.columns
				h1 Sign Up for Phound

		div.row#alertContainer
			div.large-12.columns
				div#alertDiv.alert-box.alert(data-alert)
					span#alertMessage hallo
					a#alertCloseButton.close &times;

		form#getDevicesForm
			div.row
				div.large-12.columns
					label iCloud Email
						input#iCloudEmail(type="text", placeholder="swaraj@icloud.me")
			div.row
				div.large-12.columns
					label iCloud Password
						input#iCloudPassword(type="password")

			div.row
				div.large-12.columns
					a#getDevicesButton.button.expand Get Available Devices

		form#signupForm

			div.row
				div.large-12.columns
					label Phone Number
						input#phoneNumber(type="text", placeholder="5551234567")

			div.row
				div.large-12.columns
					label Select Device
						select#devices

			div.row
				div.large-12.columns
					a#selectDeviceButton.button.expand Sign Up!

block scripts
	script(src="/js/signup.js")